<!DOCTYPE accounts SYSTEM "accounts.dtd">

<accounts realm="{{ cal_domain }}">
    {% for user in cal_users %}
    <user>
        <uid>{{ user.account }}</uid>
        <password>{{ user.password }}</password>
        <name>{{ user.name }}</name>
    </user>
    {% endfor %}
    {% for group in cal_groups %}
    <group>
        <uid>{{ group.account }}</uid>
        <password>{{ group.password }}</password>
        <name>{{ group.name }}</name>
        <members>
            {% for user in group.users %}
            <member type="users">{{ user }}</member>
            {% endfor %}
        </members>
    </group>
    {% endfor %}
    {% for location in cal_locations %}
    <location>
        <uid>{{ location.account }}</uid>
        <password>{{ location.password }}</password>
        <name>{{ location.name }}</name>
    </location>
    {% endfor %}
</accounts>
